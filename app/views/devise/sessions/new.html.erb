<section class="hero is-success is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-black">Login</h3>
        <hr class="login-hr">
        <p class="subtitle has-text-black">Please login to proceed.</p>
        <div class="box">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <div class="control">
                <%= f.email_field :email, autofocus: true, autocomplete: "Your email", class: "input is-large" %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.password_field :password, autocomplete: "current-password", class: "input is-large" %>
              </div>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.label :remember_me, class: "checkbox" do %>
                  <%= f.check_box :remember_me %> Remember me
                <% end %>
              </div>
            <% end %>
            <%= f.submit "Log in", class: "button is-block is-info is-large is-fullwidth" do %>
            Login <i class="fa fa-sign-in" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
